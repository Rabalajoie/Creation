def Decomp(n):
    if n < 2:
        print("Vous devez choisir un entier naturel strictement positif different de 0 et 1.")
    else :
        P = list(range(2, n + 1))
        j = 2
        while j <= sqrt(n):
            if P[j - 2] >= 1:
                for k in range(2, floor(n / j) + 1):
                    P[j * k - 2] = 0
            j = j + 1
        L = []
        for s in P:
            if s != 0:
                L = L + [s]
        I = []
        for p in L:
            while n % p == 0:
                I.append(p)
                q = int(n / p)
                n = q
        str(I)
        str1 = "x"
        D = str1.join(I)
        print(n, "=", D)
        return I

number = input("Quel nombre choisissez vous ?")
Decomp(int(number))
